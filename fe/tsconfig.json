{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "types": ["vite/client"],
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ]
}
